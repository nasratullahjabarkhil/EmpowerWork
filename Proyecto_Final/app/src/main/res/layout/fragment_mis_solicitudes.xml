<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".Fragments.FragmentMisSolicitudes">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="Fecha Inicia" />

        <TextView
            android:layout_width="0dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Fecha Fin" />

        <TextView
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="Tipo" />
        <TextView
            android:layout_width="0dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:text="Dias" />

        <TextView
            android:layout_width="0dp"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:text="Estado" />
    </LinearLayout>

    <!-- RecyclerView para mostrar las solicitudes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerViewSolicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <ImageView
        android:id="@+id/imageview_nmo_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/no_data"
        android:alpha="0.2"
        android:visibility="gone"/>

    <!-- Button para realizar alguna acciÃ³n -->
    <Button
        android:id="@+id/buttonSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_button_background1"
        android:text="Solicitar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>
