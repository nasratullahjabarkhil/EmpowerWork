<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    tools:context=".Activities.InicioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="372dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/login" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="@color/secondary"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="358dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:text="Introduce tus datos"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usuario"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:backgroundTint="#2979FF"
                android:drawableRight="@drawable/username"
                android:hint="Usuario"
                android:inputType="textEmailAddress"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#2979FF"
                android:drawableRight="@drawable/baseline_visibility_off_black_24"
                android:hint="Contraseña"
                android:longClickable="false"
                android:inputType="textPassword"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/olvidarPassword"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="20dp"
                android:text="¿Olvidó su contraseña?"
                android:textColor="#0206F8"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/login"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/main_button_background1"
                android:text="Entrar"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>